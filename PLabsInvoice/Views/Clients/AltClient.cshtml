
@{
    ViewBag.Title = "Client/Invoice Maintenance";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<script src="~/Scripts/Clients/AltClient.js" type="text/javascript"></script>

<h3>@ViewBag.Title</h3>

<hr />
<div class="container body-content">
    <div class="card">
        <div class="card-body text-left">

            <div class="form-group col-md-12">
                <label class="control-label">Client</label>
                <div class="form-inline">
                    <select class="form-control" data-placeholder="[ Select Client ]" id="ClientId" name="ClientId"></select> 
                    <button class="btn btn-info col-md-offset-1" onclick="@("window.location.href='" + @Url.Action("Create", "Clients") + "'");">Add client</button> 
                    <button class="btn btn-success" onclick="@("window.location.href='" + @Url.Action("Create", "Invoices") + "'");">New invoice</button>
                </div>
                <p class="text-danger" style="padding-left:5px" id="clientErrMsg"> </p>
            </div>
            <div class="form-group col-md-12">
                <label class="control-label">Name</label>
                <input type="text" value="" class="form-control text-box single-line" id="clientName" name="clientName" />
            </div>

            <div class="form-group col-md-12">
                <label class="control-label">Street Address</label>
                <input type="text" value="" class="form-control text-box single-line" id="clientAddress" name="clientAddress" />
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">City</label>
                <input type="text" value="" class="form-control text-box single-line" id="clientCity" name="clientCity" />
            </div>
            <div class="form-group col-md-3">
                <label class="control-label">State</label>
                <input type="text" value="" class="form-control text-box single-line" id="clientState" />
            </div>
            <div class="form-group col-md-3">
                <label class="control-label">Zip</label>
                <input type="text" value="" class="form-control text-box single-line" id="clientZip" name="clientZip" />
            </div>
            <div class="form-group col-md-5">
                <label class="control-label">Phone</label>
                <input type="text" value="" class="form-control text-box single-line" id="clientPhone" name="clientPhone" />
            </div>
            <div class="form-group col-md-7">
                <label class="control-label">EMail</label>
                <input type="text" value="" class="form-control text-box single-line" id="clientEmail" name="clientEmail" />
            </div>

        </div>
    </div>
    <hr />
    <table class="table table-striped table-bordered col-md-12" id="invoiceTable" style="display:none">
        <tbody id="invoiceTableBody"></tbody>
    </table>
   
</div>

